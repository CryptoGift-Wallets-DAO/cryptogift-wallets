{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "@types/jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "isolatedModules": false
  },
  "include": [
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "src/**/*.test.ts", 
    "src/**/*.test.tsx",
    "jest.setup.js"
  ],
  "exclude": ["node_modules", "dist", ".next", "out"]
}